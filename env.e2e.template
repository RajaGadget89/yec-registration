# E2E Testing Environment Variables
# Copy this file to .env.e2e and fill in the values

# E2E Test Mode (must be 'true' for test endpoints to work)
E2E_TEST_MODE=true

# E2E Authentication Secret (for HMAC authentication)
# Generate a secure random string for this
E2E_AUTH_SECRET=your-secure-random-secret-here

# Base URL for E2E tests
E2E_BASE_URL=http://localhost:3000

# Supabase Configuration (use staging for E2E tests)
SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key

# Admin Email Allowlists (for RBAC)
SUPER_ADMIN_EMAILS=alice@yec.dev
ADMIN_PAYMENT_EMAILS=raja.gadgets89@gmail.com
ADMIN_PROFILE_EMAILS=raja.gadgets89@gmail.com
ADMIN_TCC_EMAILS=dave@yec.dev

# Email Configuration (use DRY_RUN for E2E tests)
EMAIL_MODE=DRY_RUN
DISPATCH_DRY_RUN=true
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=YEC <noreply@yec.in.th>

# Cron Secret (for email dispatch)
CRON_SECRET=your-cron-secret

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
